{% extends "base.twig" %}

{% block content %}
	<div class="admin recipe-list">
		{% include "partials/page-header.twig" with { 'title' : 'Categories' } %}
		<ul class="list-group">
			<li class="list-group-item list-group-item-info">
				<a href="{{ path_for("admin.edit-recipe", {id: 'create'}) }}" class="btn btn-success">Create new</a>
			</li>
			{% for item in categories %}
				<li class="list-group-item">
					<a href="{{ path_for("admin.edit-recipe", {'id': item.id}) }}">{{ item.id }} - {{ item.title }}</a>
					<button data-url="{{ path_for("admin.delete-recipe", {'id' : item.id}) }}" class="btn btn-danger delete-recipe">x</button>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}